<h2>New Blog Post</h2>

<form action="/blogs" method="post">
  <div class="form-group">
    <label>Title</label>
    <input type="text" class="form-control" placeholder="Title" name="title">
  </div>
  <div class="form-group">
    <label>Header Picture</label>
    <input type="file" class="form-control" accecpt="image/*" name="picture">
  </div>
  <div class="form-group">
    <label>Body</label>
    <textarea type="text" class="form-control" placeholder="Body" name="body"></textarea>
  </div>
  <div class="form-group" id="checkbox-container">
    <label id="checkbox_label">Use as featured blog?</label>
    <input type="checkbox" class="" id="checkbox_featured" name="featured"></input>
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>
